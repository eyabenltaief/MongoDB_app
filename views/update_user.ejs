<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Employees</a>
                </div>
            </div>
            <div class=".form-title text-center">
                <h2 class="text-dar">Update Employees</h2>
                <span class="text-light">Use below form to Update a new Employees </span>
            </div>
            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_user">
                <div class="new-user">
                    <div class="form-group">
                        <label for="id" class="text-light"></label>
                        <input type="hidden" name="id" value="<%= employes._id %>">
                    </div>
                    <div class="form-group">
                        <label for="nom" class="text-light">FirstName</label>
                        <input type="text" name="nom" value="<%= employes.nom %>">
                    </div>
                    <div class="form-group">
                        <label for="prenom" class="text-light">LastName</label>
                        <input type="text" name="prenom" value="<%= employes.prenom %>">
                    </div>
                    <div class="form-group">
                        <label for="anciennete" class="text-light">Anciennete</label>
                        <input type="text" name="anciennete" value="<%= employes.anciennete %>">
                    </div>
                    <div class="form-group">
                        <label for="tel" class="text-light">Telephone</label>
                        <input type="text" name="tel" value="<%= employes.tel %>">
                    </div>
                    <div class="form-group">
                        <label for="prime" class="text-light">Prime</label>
                        <input type="text" name="prime" value="<%= employes.prime %>">
                    </div><br /><br />
                    <h3>Adresse</h3>
                    <div class="form-group">
                        <label for="numero" class="text-light">Street number</label>
                        <input type="text" name="numero" value="<%= employes.adresse.numero %>">
                    </div>
                    <div class="form-group">
                        <label for="ville" class="text-light">Ville</label>
                        <input type="text" name="ville" value="<%= employes.adresse.ville %>">
                    </div>
                    <div class="form-group">
                        <label for="codepostale" class="text-light">Postal code</label>
                        <input type="text" name="codepostale" value="<%= employes.adresse.codepostale %>">
                    </div><br /><br />

                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
            <!-- /form handling -->
        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->